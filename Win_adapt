package com.company;

import java.awt.*;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;


public class winAdapt extends Frame  {



    public static void main(String[] args) {

        listner l1=new listner();
        l1.setTitle("Click to close");
        l1.setSize(400,500);
        l1.setVisible(true);
        l1.addWindowListener(new newClass1());



    }

}
class newClass1 extends WindowAdapter
{

    @Override
    public void windowClosing(WindowEvent e) {
        System.exit(0);

    }


}
